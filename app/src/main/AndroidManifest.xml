<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- permission 사용 선언 -->
    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Test250101"
        tools:targetApi="31">
        <activity
            android:name=".TestActivity8"
            android:exported="false" />
        <activity
            android:name=".TestActivity7"
            android:exported="false" />
        <activity
            android:name=".TestActivity6"
            android:exported="false" />
        <activity
            android:name=".TestActivity5"
            android:exported="true"
            android:theme="@style/Theme.Test250102" />
        <activity
            android:name=".TestActivity4"
            android:exported="false" />
        <activity
            android:name=".TestActivity3"
            android:exported="false" />
        <activity
            android:name=".TestActivity2"
            android:exported="false"
            android:theme="@style/Base.Theme.Test250101" />
        <activity
            android:name=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".TestActivity"
            android:exported="false"
            android:theme="@style/Base.Theme.Test250101.Actionbar" /> <!-- TestActivity2를 기본 시작 액티비티로 설정 -->
        <activity
            android:name=".TestActivity9"
            android:exported="true">

            <!-- MyReciver 사용을 위한 intent-filter -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- MyReciver 사용을 위한 receiver -->
        <receiver
            android:name=".common.MyReceiver2"
            android:enabled="true"
            android:exported="true">
            <intent-filter>

                <!-- android.intent.action.BOOT_COMPLETED 앱 부팅 완료 시 실행 -->
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>